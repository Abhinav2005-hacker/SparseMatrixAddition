#include <stdio.h>

int main() {
    int r1, c1, i, j, k = 1, count = 0, swap;
    printf("Enter the rows and columns:-\n");
    scanf("%d", &r1);
    scanf("%d", &c1);
    int a[r1][c1];
    printf("Enter the array\n");
    for (i = 0; i < r1; i++) {
        for (j = 0; j < c1; j++) {
            scanf("%d", &a[i][j]);
            if (a[i][j] != 0) {
                count++;
            }
        }
    }

    if (count > r1 * c1 / 2) {
        printf("Number of zeros is lower\n");
        return 0;
    }

    int r[20][3], m[20][3];
    r[0][0] = r1;
    r[0][1] = c1;
    r[0][2] = count;
    for (i = 0; i < r1; i++) {
        for (j = 0; j < c1; j++) {
            if (a[i][j] != 0) {
                r[k][0] = i;
                r[k][1] = j;
                r[k][2] = a[i][j];
                k++;
            }
        }
    }

    printf("Triple matrix\n");
    for (i = 0; i < count + 1; i++) {
        for (j = 0; j < 3; j++) {
            printf("%d\t", r[i][j]);
        }
        printf("\n");
    }

    // Sorting based on column index
    for (i = 1; i < count; i++) {
        for (j = 1; j < count - i + 1; j++) {
            if (r[j][1] > r[j + 1][1]) {
                // Swap rows
                for (k = 0; k < 3; k++) {
                    swap = r[j][k];
                    r[j][k] = r[j + 1][k];
                    r[j + 1][k] = swap;
                }
            }
        }
    }

    printf("Altered\n");
    // Print altered matrix
    for (i = 0; i < count + 1; i++) {
        for (j = 0; j < 3; j++) {
            printf("%d\t", r[i][j]);
        }
        printf("\n");
    }

    // Transpose
    printf("Transpose\n");
    for (i = 0; i < count + 1; i++) {
        swap = r[i][0];
        r[i][0] = r[i][1];
        r[i][1] = swap;
    }

    // Print transpose
    for (i = 0; i < count + 1; i++) {
        for (j = 0; j < 3; j++) {
            printf("%d\t", r[i][j]);
        }
        printf("\n");
    }

    return 0;
}
